<Page
    x:Class="imagine_ui.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:imagine_ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:imagine_ui.Data"
    mc:Ignorable="d"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <CommonNavigationTransitionInfo IsStaggeringEnabled="True"/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid>
        <Pivot x:Uid="Piv" Title="Agro" x:Name="pivot" CommonNavigationTransitionInfo.IsStaggerElement="True">
            <!--Pivot item one-->
            <PivotItem
              x:Uid="PivotI"
                Margin="19,14.5,0,0"
                Header="หน้าหลัก"
                CommonNavigationTransitionInfo.IsStaggerElement="True">
                <!--Double line list with text wrapping-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <!--- Row 3 4 -->

                    <Button 
            x:Name="toNewsBtn"
            Background="#CCE31414"
            BorderBrush="Transparent"
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            Margin="0,10,10,10" 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ข่าว" FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}"/>

                    <Button 
            x:Name="toNotiBtn"  
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.Column="2" 
            Grid.ColumnSpan="2" 
            Background="#CC1BBF4D" 
            Margin="10,10,10,10"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}" Content="แจ้งเตือน" BorderBrush="{x:Null}" />


                    <!--- Row 5 6 -->
                    <Button 
            x:Name="toProfileBtn" 
            Grid.Row="2" 
            Grid.RowSpan="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            Background="#FF08BD00" 
            Margin="0,10,10,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ประวัติ" FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}" BorderBrush="{x:Null}">

                    </Button>

                    <Button 
            x:Name="toSearchBtn"
            Grid.Row="2" 
            Grid.Column="2" 
            Margin="10,10,10,10" BorderBrush="{x:Null}" Foreground="#FFE02020" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FF0D6EE1" Content="ค้นหา"/>

                    <Button 
            x:Name="toAddressBtn"
            Grid.Row="2" 
            Grid.Column="3" 
            Margin="10,10,10,10" Background="#FFF44B2B" HorizontalAlignment="Center" VerticalAlignment="Stretch" Content="พื้นที่" BorderBrush="{x:Null}"/>

                    <Button 
            x:Name="toHelpBtn"
            Grid.Row="3" 
            Grid.Column="2" 
            Margin="10,0,10,20" Background="#FFDC22A7" HorizontalAlignment="Center" VerticalAlignment="Stretch" Content="ช่วยเหลือ" BorderBrush="{x:Null}"/>

                    <Button 
            x:Name="toSettingBtn"
            Grid.Row="3" 
            Grid.Column="3" 
            Margin="10,0,10,20"  Background="#FFFFB400" HorizontalAlignment="Center" VerticalAlignment="Stretch" Content="ตั้งค่า" BorderBrush="{x:Null}"/>

                </Grid>
            </PivotItem>

            <!--Pivot item two-->
            <PivotItem
                x:Uid="Pivot2"
                Margin="19,14.5,0,0"
                Header="ข่าว">
                <!--Double line list no text wrapping-->
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="newsSearchBox"
                        Grid.Row="0"
                        Grid.Column="0" BorderBrush="Black"
                        />
                    <Button 
                        x:Name="newsSearchBtn" 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        BorderBrush="Black" 
                        Content="ค้นหา" 
                        Foreground="White"
                        />

                    <ScrollViewer 
                        x:Name="scrollView" 
                        Grid.Row="1" 
                        Grid.ColumnSpan="2" 
                        BorderBrush="Black">

                        <ListView BorderBrush="Black" Foreground="Black"/>

                    </ScrollViewer>
                </Grid>
            </PivotItem>

            <!--Pivot item three-->
            <PivotItem
                x:Uid="PivotItem3"
                Margin="19,14.5,0,0"
                Header="ค้นหา">

                <Grid>


                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <TextBox
            x:Name="diSearchBox"
            Grid.Row="2"
            Grid.Column="0" BorderBrush="Black"
            />
                    <Button
            x:Name="diDearchBtn"
            Grid.Row="2"
            Grid.Column="1" 
            BorderBrush="White" 
            Content="ค้นหา" 
            Foreground="White"
            />

                    <TextBlock
            x:Name="searchTitle"
            Grid.Row="3"
            Grid.ColumnSpan="2" Text="ผลการค้นหา" Foreground="White" FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}" FontWeight="Bold"
            />

                    <ScrollViewer
            x:Name="seearchView"
            Grid.Row="4"
            Grid.ColumnSpan="2" BorderBrush="Black">
                        <ListView 
                x:Name="searchList"
                BorderBrush="Black" 
                Foreground="Black"/>

                    </ScrollViewer>
                </Grid>
            </PivotItem>


            <!--Pivot item four-->
            <PivotItem
                x:Uid="PivotItem4"
                Margin="19,14.5,0,0"
                Header="แจ้งเตือน">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                         x:Name="notiView"
                         Grid.Row="2"
                         BorderBrush="Black">
                        <ListView 
                             x:Name="notiList"
                             BorderBrush="Black" 
                             Foreground="Black"/>
                    </ScrollViewer>
                </Grid>
            </PivotItem>

            <!--Pivot item five-->
            <PivotItem
                x:Uid="PivotItem5"
                Margin="19,14.5,0,0"
                Header="ประวัติ">

                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image 
                        x:Name="image"
                        Grid.Row="0"
                        Grid.Column="0" 
                        Source="Assets/Logo.png"
                        Width="180" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" />

                        <Grid
                        x:Name="profileDetail"
                        Grid.Row="0"
                        Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                            Text="ID" 
                            Grid.Row="0"
                            FontSize="{StaticResource TextStyleExtraLargePlusFontSize}"/>
                            <TextBox
                            x:Name="profileID"
                            Text="lamudd" 
                            Grid.Row="1"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}" IsEnabled="False"/>
                            <TextBlock 
                            Text="ชื่อ - นามสกุล" 
                            Grid.Row="2"
                            FontSize="{StaticResource TextStyleExtraLargePlusFontSize}"/>
                            <TextBox 
                            x:Name="profileName"
                            Text="บุญหล่น ละมุดงาม" 
                            Grid.Row="3"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}" IsEnabled="False"/>
                            <TextBlock 
                            Text="เบอร์โทร" 
                            Grid.Row="4"
                            FontSize="{StaticResource TextStyleExtraLargePlusFontSize}"/>
                            <TextBox 
                            x:Name="profilePhoneNum"
                            Text="08x-xxx-xxxx" 
                            Grid.Row="5"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}" IsEnabled="False"/>
                        </Grid>


                        <TextBlock
                        Text="ที่อยู่"
                        Grid.Row="1" 
                        Grid.ColumnSpan="2"
                        FontSize="{StaticResource TextStyleExtraLargePlusFontSize}"/>

                        <TextBlock
                        x:Name="profileAddress"
                        Text="18/9 ซ.เซเวิ่ลอีเลฟเวิ่ล แขวงหน้าตึกคอม"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        TextWrapping="Wrap"
                        FontSize="{StaticResource TextStyleExtraLargePlusFontSize}"/>
                        <Button
                        x:Name="changePassBtn"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="เปลี่ยนรหัสผ่าน" 
                        HorizontalAlignment="Stretch"/>

                        <Button
                        x:Name="editProfileBtn"
                        Grid.Row="3"
                        Grid.Column="1"
                        Content="แก้ไข" 
                        HorizontalAlignment="Stretch"/>

                    </Grid>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

